<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- User info (profile picture and username) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/baseline_person_24"
                android:scaleType="centerCrop"
                android:layout_marginEnd="8dp"
                android:background="@drawable/profile_picture_border" />

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textStyle="bold"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- Post image -->
        <ImageView
            android:id="@+id/postImage"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_image_24" />

        <!-- Actions: Like, Comment, Share -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="start">

            <ImageView
                android:id="@+id/likeButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/baseline_thumb_up_24"
                android:layout_marginEnd="16dp" />

            <ImageView
                android:id="@+id/commentButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/baseline_comment"
                android:layout_marginEnd="16dp" />

        </LinearLayout>

        <!-- Likes count and post description -->
        <TextView
            android:id="@+id/likeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100 likes"
            android:textStyle="bold"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

        <TextView
            android:id="@+id/postDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is a sample description of the post."
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginTop="4dp" />

        <!-- View all comments link -->
        <TextView
            android:id="@+id/viewComments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View all comments"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textColor="#888888"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
