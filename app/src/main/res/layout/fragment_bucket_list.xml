<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="730dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <!-- Header with logo -->
        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="142dp"
            android:layout_height="75dp"
            app:srcCompat="@drawable/wanderlog_text_icon" />

        <!-- Title -->
        <TextView
            android:id="@+id/bucketListTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bucket List"
            android:textSize="26sp"
            android:layout_marginTop="8dp"
            android:textStyle="bold|italic"
            android:textColor="@color/black"/>

        <!-- RecyclerView for bucket list items -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/bucketListRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />

        <!-- Add bucket list item button -->
        <LinearLayout
            android:id="@+id/addBucketListItemButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_add_circle_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Bucket List Item"
                android:layout_marginStart="8dp"
                android:textSize="14sp"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
